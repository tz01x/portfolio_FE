---
import { Category } from '../../interfaces';


interface Props {
    categories: Category[];
}

const { categories } = Astro.props;
---

<section>
    <h3 class="text-center">Categories</h3>
    <div class="flex gap-3 mt-8">
        {
            categories.map((category) => {
                return (
                    <a
                        href={"/blogs?category=" + category.name}
                        class="inputs capitalize rounded-full transition-colors cursor-pointer hover:bg-gray-200  hover:text-black"
                    >
                        {category.name}
                    </a>
                );
            })
        }
    </div>
</section>
